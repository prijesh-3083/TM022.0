<% layout('/layouts/boilerplate') -%>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
    }
    .container {
        max-width: 1400px;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
        text-align: center;
        color: #000;
        
    }
    .process {
        display: flex;
        justify-content: space-around;
        margin-top: 30px;
    }
    .step {
        flex: 1;
        text-align: center;
        padding: 20px;
    }
    .step i {
        font-size: 100px;
        margin-bottom: 20px;
    }
    .step h2 {
        color: #333;
        font-size: 1.2em;
    }
    .step p {
        color: #666;
    }
    @media (max-width: 768px) {
        .container {
            padding: 20px;
        }
        .process {
            flex-direction: column;
            align-items: center;
        }
        .step {
            margin-bottom: 20px;
        }
    }
</style>
</head>
<body>

<div class="container">
    <h1>E-Waste Reduction Process</h1>
    <div class="process">
        <div class="step">
            <!-- <img src="https://via.placeholder.com/100" alt="Reduce Icon"> -->
            <i class="fa-solid fa-recycle"></i>
            <h2>Reduce</h2>
            <p>Minimize electronic consumption by purchasing only what you need.</p>
        </div>
        <div class="step">
            <!-- <img src="https://via.placeholder.com/100" alt="Reuse Icon"> -->
            <i class="fa-solid fa-recycle"></i>
            <h2>Reuse</h2>
            <p>Extend the lifespan of electronics by repairing and repurposing them.</p>
        </div>
        <div class="step">
            <!-- <img src="https://via.placeholder.com/100" alt="Recycle Icon"> -->
            <i class="fa-solid fa-recycle"></i>
            <h2>Recycle</h2>
            <p>Responsibly dispose of old electronics through proper recycling channels.</p>
        </div>
        <div class="step">
            <!-- <img src="https://via.placeholder.com/100" alt="Refuse Icon"> -->
            <i class="fa-solid fa-recycle"></i>
            <h2>Refuse</h2>
            <p>Avoid unnecessary electronic purchases and refuse items you don't need.</p>
        </div>
    </div>
</div>

</body>
